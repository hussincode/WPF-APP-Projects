<Page x:Class="Demo1.Home_Window"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Demo1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Home_Window">
    <WrapPanel >
        <DockPanel Background="White" Height="450" Width="800">
            <Border Background="black"
                Height="50"
                DockPanel.Dock="Top">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="88*"/>
                        <ColumnDefinition Width="123*"/>
                        <ColumnDefinition Width="189*"/>
                    </Grid.ColumnDefinitions>

                    <Label Content="SmartQuiz"
                       Foreground="White"
                       FontSize="20"
                       FontWeight="bold"
                       Margin="10,0,0,0"
                       HorizontalAlignment="Center"/>

                    <StackPanel Grid.Column="2" 
                            Orientation="Horizontal" Margin="161,0,0,0"
                            >
                        <Border  BorderThickness="5"
                            BorderBrush="White"
                            CornerRadius="10"
                            Background="White">
                            <ComboBox Height="20"
                          Width="80"  
                          >

                                <ComboBoxItem Content="c#"/>
                                <ComboBoxItem Content="c++"/>
                                <ComboBoxItem Content="Java"/>

                            </ComboBox>
                        </Border>
                        <Border BorderThickness="5"
                            BorderBrush="White"
                            CornerRadius="10"
                            Background="White"
                            Margin="30,3,0,3">
                            <Button Content="Start"
                            Width="80"
                                FontSize="10"
                                HorizontalAlignment="Center"
                                Background="Transparent"
                                Height="30"
                                Foreground="Black"
                                BorderThickness="0" Click="Button_Click"
                                
                                />

                        </Border>

                    </StackPanel>


                </Grid>
            </Border>
            <StackPanel DockPanel.Dock="Bottom" 
              Height="103">
            
            <Label Content="Welcome Back"
                   HorizontalAlignment="Center"
                   FontSize="30"
                   FontWeight="Bold"/>
            <Border 
                    Background="GreenYellow"
                    CornerRadius="10"
                    Width="118"
                Padding="15"
                >
            <Button Content="Show Result"
                    Width="80"
                    Background="Transparent"
                    BorderThickness="0"/>
            </Border>
        </StackPanel>
        
    </DockPanel>
    </WrapPanel>
</Page>
