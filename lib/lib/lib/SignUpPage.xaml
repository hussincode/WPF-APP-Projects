<Page x:Class="lib.SignUpPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:lib"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SignUpPage">

    <Grid Background="White" Margin="0,0,0,-146">
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>


        <StackPanel Orientation="Vertical" 
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center" Height="499">
            <Image  Source="/images/sign-up.png" Stretch="Fill" Height="34" Width="33"/>
            <Label Content="Username" 
                   Margin="5"
                   FontSize="14"
                   Name="Username"/>
            <TextBox Name="UsernameTextBox" 
                        Margin="5" 
                        Width="200" 
                        Height="30"  />
            
            
            <Label Content="Email"
                    Margin="5"
                    FontSize="14"/>
            <TextBox Name="EmailTextBox" 
                        Margin="5" 
                        Width="200" 
                        Height="30" />

            
            <Label Content="Password"
                   Margin="5"
                   FontSize="14"/>
            <StackPanel Orientation="Horizontal">
            <PasswordBox Name="PasswordTextBox" 
                        Margin="5" 
                        Width="200" 
                        Height="30" />
            
            <TextBox Name="passwordvisable" 
            Margin="5" 
            Width="200" 
            Height="30" 
                         Visibility="Collapsed"/>
                <CheckBox Content="show"
                          Checked="Check"
                          Unchecked="unCheck"/>
            </StackPanel>


            <Label Content="Confirm Password"
                   Margin="5"
                   FontSize="14"/>
            <PasswordBox Name="ConfirmPasswordTextBox" 
                        Margin="5" 
                        Width="200" 
                        Height="30" />
            

            <RadioButton Content="Librarian" 
                         Name="RadioLibrarian"/>
            <RadioButton Content="Member" 
                         Name="RadioMember"/>

            <Button Content="Sign Up" 
                    Margin="10" 
                    Width="100" 
                    Height="30" 
                    Name="SignUpButton"
                    HorizontalAlignment="Center" Click="SignUpButton_Click_1"
                    />

            <Button Content="Already have account?" 
                    Margin="10" 
                    Width="120" 
                    Height="30" 
                    HorizontalAlignment="Center"
                    
                    Background="Transparent"
                  BorderThickness="0" Click="Button_Click"/> 



        </StackPanel>



    </Grid>
</Page>
