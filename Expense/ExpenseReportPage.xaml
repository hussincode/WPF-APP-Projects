<Page x:Class="Expense.ExpenseReportPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Expense"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ExpenseReportPage" Loaded="Window_loaded">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Images/astronaut-black-hole-space-8k-wallpaper-uhdpaper.com-537@5@f.jpg"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="239"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Grid.Column="1" 
               VerticalAlignment="Center"
               FontWeight="Bold"
               FontSize="20"
               Foreground="Blue"
               Content="Expance Report for:"/>

        <Grid Margin="10"
              Grid.Column="1"
              Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>

            </Grid.RowDefinitions>

            <StackPanel Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Grid.Row="0"
                        Orientation="Horizontal"
                        >
                <Label Margin="0,0,0,5 "
                       FontWeight="Bold"
                       Foreground="White"
                       Content="Name:"/>

                <Label Margin="0,0,0,5 "
                       FontWeight="Bold"/>
            </StackPanel>

            <StackPanel Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Grid.Row="1"
                        Orientation="Horizontal">
                <Label Margin="0,0,0,5"
                       FontWeight="Bold"
                       Foreground="White"
                       Content="Department:"/>

                <Label Margin="0,0,0,5"
                       FontWeight="Bold"/>

            </StackPanel>

            <Grid Grid.Column="0"
                  Grid.ColumnSpan="2"
                  Grid.Row="2"
                  VerticalAlignment="Top"
                  HorizontalAlignment="Left">
                <DataGrid x:Name="dataGrid" AutoGenerateColumns="True" Margin="0,0,-535,-272" />
            </Grid>


        </Grid>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="34*"/>
                <RowDefinition Height="50*"/>
                <RowDefinition Height="44*"/>
                <RowDefinition Height="55*"/>
                <RowDefinition Height="58*"/>
                <RowDefinition Height="46*"/>
                <RowDefinition Height="57*"/>
                <RowDefinition Height="34*"/>
                <RowDefinition Height="36*"/>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,50" Grid.RowSpan="2">
                <Label Content="Name"
           Foreground="White"
           FontWeight="Bold" Width="73"/>

                <TextBox Name="nameTextBlock"
             Foreground="Black" 
             Width="151"
             Background="White"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5,0,11" Grid.Row="1">
                <Label Content="Amount"
           Foreground="White"
           FontWeight="Bold" Width="73"/>

                <TextBox Name="AmountTextBlock"
             Foreground="Black" 
             Width="151"
             Background="White"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5,0,5" Grid.Row="2">
                <Label Content="ExpenseDate"
           Foreground="White"
           FontWeight="Bold" Width="73"/>

                <TextBox Name="ExpenseDateTextBlock"
             Foreground="Black" 
             Width="151"
             Background="White"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5,0,5" Grid.Row="3">
                <Label Content="Department"
           Foreground="White"
           FontWeight="Bold" Width="73"/>

                <TextBox Name="DepartmentTextBlock"
             Foreground="Black" 
             Width="151"
             Background="White"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5,0,5" Grid.Row="4">
                <Label Content="ExpenseTitle"
           Foreground="White"
           FontWeight="Bold" Width="73"/>

                <TextBox Name="ExpenseTitleTextBlock"
             Foreground="Black" 
             Width="151"
             Background="White"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5,0,5" Grid.Row="5">
                <Label Content="Notes"
           Foreground="White"
           FontWeight="Bold" Width="73"/>

                <TextBox Name="NotesTextBlock"
             Foreground="Black" 
             Width="151"
             Background="White"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5,0,5" Grid.Row="6">
                <Label Content="CreatedAt"
           Foreground="White"
           FontWeight="Bold" Width="73"/>

                <TextBox Name="CreatedAtTextBlock"
             Foreground="Black" 
             Width="151"
             Background="White"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" RenderTransformOrigin="0.494,0.519" Margin="0,5,0,5" Grid.Row="7" >
                <Label Content="IsActive"
                       Foreground="White" Width="56"/>
                <RadioButton Content="True" GroupName="IsActive"
                             Foreground="White" Height="29" Width="50"/>
                <RadioButton Content="False" GroupName="IsActive"
                             Foreground="White" Height="28"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5,0,0" Grid.Row="8">
                <Button Content="Add"
                    Grid.Row="8" Click="Button_Click_1" Width="49"/>
                <Button Content="update"
    Grid.Row="8" Click="Update_Click" Width="51"/>
                <Button Content="Dele"
Grid.Row="8" Click="Delet_Click" Width="51"/>
            </StackPanel>





        </Grid>

    </Grid>
</Page>
