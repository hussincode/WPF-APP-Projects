<Page x:Class="Demo1.Quiz2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Demo1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Quiz2">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="71*"/>
            <RowDefinition Height="70*"/>
            <RowDefinition Height="309*"/>
        </Grid.RowDefinitions>
        <DockPanel>
            <StackPanel Orientation="Horizontal"
                 Margin="20"
                 DockPanel.Dock="Top">
                <Label Content="Quistion" 
                Foreground="Green"/>
                <Label Content="2" 
                Foreground="Orange"
                />
                <Label Content="of"
                Foreground="Gray"/>
                <Label Content="3"
                Foreground="Orange"/>
            </StackPanel>
        </DockPanel>

        <StackPanel Orientation="Horizontal"
                 Grid.Row="1"
                 Margin="10,10,10,10">
            <Label Content="Which of the follwoing"
                Foreground="Gray"
                FontSize="20"/>
            <Label Content="is"
                Foreground="Purple"
                FontSize="20"/>
            <Label Content="a reference"
                Foreground="Gray"
                FontSize="20"/>
            <Label Content="type"
                 Foreground="Orange"
                FontSize="20"/>
            <Label Content="in c#"
                 Foreground="Purple" Width="53"
                FontSize="20"/>
            <Label Content="?"
                 Foreground="Gray"
                FontSize="20"/>
        </StackPanel>
        <StackPanel Grid.Row="2">
            <RadioButton Grid.Row="2"
               Height="20"
               Width="120"
                   Margin="20">
                array

            </RadioButton>
            
            <RadioButton
   Height="20"
   Width="120"
       Content="int"/>
            <RadioButton Grid.Row="2"
   Height="20"
   Width="120"
       Margin="20">
                list

            </RadioButton>
            <Border Background="GreenYellow"
                 Width="100"
                 CornerRadius="7">
                <Button Content="Next Quision"
                 Width="100"
                 Background="Transparent"
                 BorderThickness="0" Click="Button_Click"/>
            </Border>
            
        </StackPanel>
    </Grid>
</Page>
