<Page x:Class="Demo1.Quiz4"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Demo1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Quiz4">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="71*"/>
            <RowDefinition Height="70*"/>
            <RowDefinition Height="309*"/>
        </Grid.RowDefinitions>
        <DockPanel>
            <StackPanel Orientation="Horizontal"
              Margin="20"
              DockPanel.Dock="Top">
                <Label Content="Quistion" 
             Foreground="Green"/>
                <Label Content="3" 
             Foreground="Orange"
             />
                <Label Content="of"
             Foreground="Gray"/>
                <Label Content="3"
             Foreground="Orange"/>
            </StackPanel>
        </DockPanel>

        <StackPanel Orientation="Horizontal"
              Grid.Row="1"
              Margin="10,10,10,10">
            <Label Content="Which of the follwoing"
             Foreground="Gray"
             FontSize="20"/>
            <Label Content="is"
             Foreground="Purple"
             FontSize="20"/>
            <Label Content="a reference"
             Foreground="Gray"
             FontSize="20"/>
            <Label Content="type"
              Foreground="Orange"
             FontSize="20"/>
            <Label Content="in c#"
              Foreground="Purple" Width="53"
             FontSize="20"/>
            <Label Content="?"
              Foreground="Gray"
             FontSize="20"/>
        </StackPanel>
        <StackPanel Grid.Row="2">
            <ListBox Width="135"
                     Margin="20"
                     SelectionMode="Multiple">
                <ListBoxItem Content="int"/>
                <ListBoxItem Content="array"/>
                <ListBoxItem Content="string"/>
                <ListBoxItem Content="bool"/>
            </ListBox>
            <Border Background="GreenYellow"
              Width="100"
              CornerRadius="7">
                <Button Content="Submit"
              Background="Transparent"
              BorderThickness="0" Click="Button_Click"/>
            </Border>
        </StackPanel>
    </Grid>
</Page>
