<Page x:Class="Form.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Form"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="92*"/>
            <RowDefinition Height="69*"/>
            <RowDefinition Height="77*"/>
            <RowDefinition Height="97*"/>
            <RowDefinition Height="115*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="373*"/>
            <ColumnDefinition Width="427*"/>
        </Grid.ColumnDefinitions>

        <Label Content="First Name:" Margin="279,23,10,10"/>
        <TextBox Text="{Binding FirstName, Mode=TwoWay}" Grid.Column="1" Margin="27,23,310,10"/>

        <Label Content="Second Name:" Margin="279,23,10,10" Grid.Row="1"/>
        <TextBox Text="{Binding LastName, Mode=TwoWay}" Grid.Column="1" Margin="27,23,310,10" Grid.Row="1"/>

        <Label Content="Email:" Margin="279,17,10,0" Grid.Row="2"/>
        <TextBox Text="{Binding Email, Mode=TwoWay}" Grid.Column="1" Margin="27,16,310,31" Grid.Row="2"/>

        <Label Content="Address:" Margin="279,16,10,30" Grid.Row="4"/>
        <TextBox Text="{Binding Address, Mode=TwoWay}" Grid.Column="1" Margin="27,10,310,24" Grid.Row="4"/>

        <Label Content="Number:" Margin="279,25,10,15" Grid.Row="3"/>
        <TextBox Text="{Binding Number, Mode=TwoWay}" Grid.Column="1" Margin="27,30,310,10" Grid.Row="3"/>

        <Button Content="Show" Grid.Column="1" Margin="346,75,10,17" Grid.Row="4" Click="Button_Click"/>

    </Grid>
</Page>
